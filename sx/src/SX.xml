<?xml version="1.0" encoding="UTF-8"?>
<configs>
	<scan-package base-package="com.test.dao" scheme="mysql">
		<!-- 主要用于 多数据库类型 有两种方式 一种是 后缀名 另一种是 按文件夹区分 -->
		<scheme name="mysql" type="file" value=".mysql"/>
		<scheme name="oracle" type="file" value="oracle"/>
		<scheme name="oracle" type="folder" value="oracle"/>
	</scan-package>
	
	<node-parser>
		<parser name="if" class="net.javaoop.sx.parser.IfNodeParser" />
		<parser name="else" class="net.javaoop.sx.parser.ElseNodeParser" />
		<parser name="elseif" class="net.javaoop.sx.parser.ElseIfNodeParser" />
	</node-parser>
</configs>